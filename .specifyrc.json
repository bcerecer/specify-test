{
  "repository": "@staratlas/DAO",
  "head": "specify",
  "rules": [
    {
      "name": "Design Tokens / Color",
      "path": "packages/polis/styles/colors.css",
      "filter":{
        "types": ["color"]
      },
      "parsers": [
        {
          "name": "sort-by",
          "options": {
            "keys": ["name"]
          }
        },
        {
          "name": "to-css-custom-properties"
        }
      ]
    },
    {
      "name": "Design Tokens / Shadow",
      "path": "packages/polis/styles/shadows.css",
      "filter":{
        "types": ["shadow"]
      },
      "parsers": [
        {
          "name": "sort-by",
          "options": {
            "keys": ["name"]
          }
        },
        {
          "name": "to-css-custom-properties"
        }
      ]
    },
    {
      "name": "Assets / Vector",
      "path": "packages/polis/assets/vector/",
      "filter": {
        "types": ["vector"]
      },
      "parsers": [
        {
          "name": "svgo",
          "options": {
            "svgo": {
              "plugins": [
                {
                  "removeDimensions": true
                },
                {
                  "removeAttrs": {
                    "attrs": "*:(fill|stroke)"
                  }
                },
                {
                  "addAttributesToSVGElement": {
                    "attributes": ["width=\"1em\"", "height=\"1em\""]
                  }
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Assets / Font",
      "path": "packages/polis/assets/fonts/",
      "filter":{
        "types": ["font"]
      },
      "parsers": [
      ]
    }
  ]
}